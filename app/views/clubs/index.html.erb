<h1>Listing clubs</h1>

<table class = "datagrid">
	<thread class = "datagrid"
		<th>Name</th>
	</thread>

<% @clubs.each do |club| %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%= link_to club.name, club_path(club) %></td>
	<td align="center">
	<%= link_to(image_tag("edit_dg.gif", :border => 0), edit_club_path(club))  %>&nbsp;
	<%= link_to(image_tag("delete_dg.gif", :border => 0), club_path(club), :confirm => 'delete?', :method => :delete) %>
    <td><%#= link_to 'Edit', edit_club_path(club) %></td>
    <td><%#= link_to 'Destroy', club, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Club', new_club_path %>
