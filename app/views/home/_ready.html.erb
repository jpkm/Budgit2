<table class="datagrid">
<caption class="datagrid">Reimbursable</caption>
	<thead class="datagrid">
		<th>Club</th>
		<th>Item</th>
		<th>Purchased</th>
		<th>Amount</th>
		<th>Action</th>
	</thead>

<% @ready_debits.each do |debit| %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
	<td><%= link_to debit.account.club.name, club_path(debit.account.club) %></td>
	<td align="center"><%= link_to debit.item_purchased[0..10], debit_path(debit) %></td>
    <td align="center"><%= debit.date_purchased.strftime("%d.%m")%></td>
    <td align="center">
		<% if debit.amount > 250 %>
			<%= debit.amount.to_s + "*"%>
		<% else %> 
			<%= debit.amount %>
		<% end %>
	</td>
	<td>
		<% if can? :reimburse, debit %>
			<%= link_to(image_tag("reimburse_dg.png", :border => 0), :controller => "debits", :action => :reimburse, :id => debit.id)%>
		<% end %>
	</td>
	<% if can? :update, debit %>
		<td align="center"><%= link_to(image_tag("edit_dg.png", :border => 0), edit_debit_path(debit))%></td>
	<% end %>
	<% if can? :delete, debit %>
		<td align="center"><%= link_to(image_tag("delete_dg.png", :border => 0), debit_path(debit), :confirm => 'delete?', :method => :delete) %></td>
	<% end %>
  </tr>
<% end %>
</table>

<span class="smtext">
	<%= will_paginate @ready_debits, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>