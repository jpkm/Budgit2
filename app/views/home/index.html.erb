<% if logged_in? %>
	<!-- routes user to different page depending on role -->
	<p class ="supertiny">&nbsp;</p>
	<% if current_user.is_admin? %>
		<%= render :partial => "system_admin" %>
	<% elsif current_user.is_vp? %>
		<%= render :partial => "vp" %>
	<% else %>
		<%= render :partial => "other" %>
	<% end %>
		
<% else %>
	
    <div id= "login">
    <h1>Log In</h1>
    
	<table>
	<% form_tag  sessions_path do -%>
    
	<tr>
	<td><%= label_tag 'login' %> &nbsp;   &nbsp; &nbsp;</td>
    <td><%= text_field_tag 'login', @login %></td>
	</tr>
	
	<tr>
    <td><%= label_tag 'password' %> </td>
    <td><%= password_field_tag 'password', nil %></td>
	</tr>
	
	</table>
    
	<p><%= submit_tag 'Log in' %></p>
    <% end %>
      </div>
<% end %>
