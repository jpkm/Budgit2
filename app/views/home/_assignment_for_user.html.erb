<h2> Your Assignments </h2>

<table class = "datagrid">
  <thread class = "datagrid">
    <th>Role</th>
    <th>Club</th>
  </thread>

<% for assignment in @assignment_for_user %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%= link_to(h(assignment.role.name), role_path(assignment.role_id)) %></td>
   <td><%= link_to(h(assignment.club.name), club_path(assignment.club_id)) %></td>
  </tr>
<% end %>
</table>