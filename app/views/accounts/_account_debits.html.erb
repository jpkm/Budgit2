<h1>Debits</h1>
<table class = "datagrid">
	<thread class = "datagrid"
		<th>Item purchased</th>
		<th>Category</th>
		<th>Reason</th>
		<th>Date Purchased</th>
		<th>Account</th>
		<th>Amount</th>
		<th>Reimbursement Date</th>
		<th>Number of consumers</th>
		<th>Names of consumers</th>
	</thread>

<% @account_debits.each do |debit| %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
	<td><%= debit.item_purchased %></td>
    <td><%= debit.debit_category.category %></td>
    <td><%= debit.reason %></td>
    <td><%= debit.date_purchased %></td>
    <td><%= debit.account.club.name %>
    <td><%= debit.amount %></td>
    <td><%= debit.reimbursement_date.to_s(:long_ordinal) %></td>
	<% if debit.number_of_consumers != nil %>
		<td><%= debit.number_of_consumers %></td>
		<td><%= debit.names_of_consumers %></td>
	<% end %>
	<td align="center">
	<%= link_to(image_tag("edit_dg.gif", :border => 0), edit_debit_path(debit))%>&nbsp;
	<%= link_to(image_tag("delete_dg.gif", :border => 0), debit_path(debit), :confirm => 'delete?', :method => :delete) %>
	</td>
  </tr>
<% end %>
</table>

<span class="smtext">
<%= will_paginate @account_debits, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>