<h1>Debit Categories</h1>
<table class = "datagrid">
	<thread class = "datagrid"
		<th>Category</th>
	</thread>

<% @debit_categories.each do |debit_category| %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%= debit_category.category %></td>
	<td align="center">
	<%= link_to(image_tag("edit_dg.png", :border => 0), edit_debit_category_path(debit_category))%>&nbsp;
	<%= link_to(image_tag("delete_dg.png", :border => 0), debit_category_path(debit_category), :confirm => 'delete?', :method => :delete) %>
	</td>
  </tr>
<% end %>
</table>

<span class="smtext">
<%= will_paginate @debit_categores, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br>

<%= link_to 'New Debit category', new_debit_category_path %>
