<h1>Roles</h1>

<table class ="datagrid">
	<thead class ="datagrid">
		<th>Role</th>
		<th>Delete</th>
	</thead>
	
	<% @roles.each do |role| %>
  <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
    <td><%= role.name %></td>
	<td align="center">
		<%= link_to(image_tag("delete_dg.png", :border => 0), role_path(role), :confirm => 'delete?', :method => :delete) %>
    </td>
  </tr>
<% end %>
</table>

<span class="smtext">
	<%= will_paginate @roles, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />

<%= link_to 'New Role', new_role_path %>

