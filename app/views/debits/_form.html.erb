<%= form_for(@debit) do |f| %>
  <% if @debit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@debit.errors.count, "error") %> prohibited this debit from being saved:</h2>

      <ul>
      <% @debit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :item_purchased %><br />
    <%= f.text_area :item_purchased %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
	<%= f.collection_select :debit_category_id, DebitCategory.all, :id, :category, :prompt => "Select ..." %>
  </div>
  <div class="field">
    <%= f.label :reason %><br />
    <%= f.text_area :reason %>
  </div>
  <div class="field">
    <%= f.label :number_of_consumers %><br />
    <%= f.text_field :number_of_consumers %>
  </div>
  <div class="field">
    <%= f.label :names_of_consumers %><br />
    <%= f.text_area :names_of_consumers %>
  </div>
  <div class="field">
    <%= f.label :date_purchased %><br />
	<%= f.date_select :date_purchased, :order => [:month, :day, :year] %>
    <%#= f.text_field :date_purchased %>
  </div>
  <div class="field">
    <%= f.label :account_id %><br />
	<%= f.hidden_field :account_id, :value => @account_id %>
	<%#= f.collection_select :account_id, Account.all, :id, :name, :prompt => "Select ..." %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
 <!-- if statement to check if user is Student Affairs Advisor -->
  <div class="field">
    <%= f.label :reimbursement_date %><br />
     <%= f.date_select :reimbursement_date, :order => [:month, :day, :year] %>
	<%#= f.text_field :reimbursement_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
