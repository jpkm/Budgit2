<h1>Listing credits</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Date</th>
    <th>Account</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= credit.credit_category.category %></td>
    <td><%= credit.date %></td>
    <td><%= credit.account.club.name %></td>
    <td><%= credit.amount %></td>
    <td><%= link_to 'Show', credit %></td>
    <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
    <td><%= link_to 'Destroy', credit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

